<p id="notice"><%= notice %></p>

<h1>Listing Cinema Films</h1>

<table>
  <thead>
    <tr>
      <th>Cinema</th>
      <th>Film</th>
      <th colspan="3"></th>
      <th>Film Name</th>
      <th>Cinema Location</th>
    </tr>
  </thead>

  <tbody>
    <% @cinema_films.each do |cinema_film| %>
      <tr>
        <td><%= cinema_film.cinema %></td>
        <td><%= cinema_film.film_id %></td>
        <td><%= link_to 'Show', cinema_film %></td>
        <td><%= link_to 'Edit', edit_cinema_film_path(cinema_film) %></td>
        <td><%= link_to 'Destroy', cinema_film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= cinema_film.cinema.location %></td>
        <td><%= cinema_film.film.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

